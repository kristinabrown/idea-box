<div class="header-div"><h1 class="center">Idea Box </h1></div>

<div class="row">
  <div class="col s6 offset-s1">
    <label for="search">Search</label>
    <input id="search" type="text" class="search">
  </div>
</div>

<div class="row">
<%= form_tag '/ideas', method: 'post' do %>
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <%= label_tag :title, "What's your idea?" %>
         <%= text_field_tag :title, "", class: "title"  %>
       </div>
     </div>
     <div class="row">
      <div class="input-field col s11">
        <textarea id="textarea1" class="materialize-textarea body" length="100"></textarea>
        <label for="textarea1">Now describe it.</label>
      </div>
    </div>
      <div class="col s6">
        <input type="submit" value="Save" class="btn  button", id="main-button">
      </div>

  </form>
<% end %>

<div id="ideas" class="">
  <% @ideas.each do |idea| %>
    <div class="row">
      <div class="col s10 offset-s1">
        <div class='col s12 m10'>
          <div class='card blue-grey darken-1 z-depth-3 display-cards hoverable'>
          <div class='hidden'><%= idea.id %></div>
            <div class='card-content white-text'>
              <div class="card-image">
                <!-- <%= image_tag "idea.png" %> -->
                <img src="/assets/idea.png" alt="light bulb">
                <span class='card-title'> <h4><%= idea.title %></h4></span>
              </div>
              <p> <%= idea.body %> </p>
            </div>
            <div class='card-action card-foot blue-text text-darken-4'>
             <h4 class="red-text text-lighten-2"> <%= idea.quality %></h4>
             <button class="up"><i class="fa fa-thumbs-o-up"></i></button> <button class="down"> <i class="fa fa-thumbs-o-down"></i> </button>
             <a class="delete right" href="#">Delete</a> <a class="right" href="/ideas/<%= idea.id %>/edit">Edit</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
  
<h1 class="center">Idea Box </h1>


<div class="row">
<%= form_tag '/ideas', method: 'post' do %>
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <%= label_tag :title, "Title" %>
         <%= text_field_tag :title, "", class: "title"  %>
       </div>
      <div class="input-field col s6">
        <%= label_tag :body, "Body" %>
        <%= text_field_tag :body, "", class: "body"  %>
      </div>
      <div class="col s6">
        <input type="submit" value="Save" class="waves-effect waves-light btn button", id="main-button">
      </div>
    </div>
  </form>
<% end %>

<div id="ideas" class="center">
  <% @ideas.each do |idea| %>
    <div class="row">
      <div class='col s12 m8'>
        <div class='card blue-grey darken-1 z-depth-3 display-cards'>
          <div class='card-content white-text'>
            <span class='card-title'> <h4><%= idea.title %></h4></span>
            <p> <%= idea.body %> </p>
          </div>
         <div class='card-action card-foot blue-text text-lighten-4'><h6> <%= idea.quality %></h6></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
  